<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <style>
        .bg-greyish {
            background-color: #c9c9c9;
        }
        .card-body {
            padding: 1.5rem;
        }
        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }
        .card-subtitle {
            font-size: 1rem;
            color: #6c757d;
        }
        .card-text {
            margin-bottom: 0.75rem;
        }
        .text-muted {
            font-size: 0.875rem;
        }
        .d-flex.justify-content-center {
            justify-content: center;
        }
        #carouselExampleIndicators {
            width: 100%;
            max-height: 400px;
        }
        #about-section h2,
        #contact-section h2 {
            text-align: center;
        }
        
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .content {
            flex: 1;
        }

        .footer {
            position: relative;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: #f8f9fa;
            padding: 20px;
            text-align: center;
        }
        .journey-content-container{
            white-space: pre-wrap;
            font-family: 'Roboto', sans-serif;
            font-size: 1rem;
            margin: 0;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
</head>
<body>
    <%- include('../partials/navbar1') %>
    
    <div class="container mt-4">
        <a href="/all-articles"> <button class="btn btn-primary mb-4 mt-4" >Back</button></a>
        <h1 class="mb-4">Interview Experiences</h1>
        <% if (articles.length === 0) { %>
            <p>No Content found.</p>
        <% } else { %>
            <% articles.forEach(article => { %>
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title"><%= article.company_name%></h5>
                        <h6 class="card-subtitle mb-2 text-muted">Job Role: <%= article.job_role %></h6>
                        <p class="card-text">
                            <strong>Name: <%= article.candidate_name %></strong>
                        </p>
                        <p class="card-text">
                            <strong>Preparation Strategies:</strong>
                            <div class="journey-content-container"><%= article.strategy %></div>
                        </p>
                        <p class="card-text">
                            <strong>Journey:</strong>
                            <div class="journey-content-container"><%= article.journey %></div>
                        </p>
                        <p class="card-text"><small class="text-muted">Posted on <%= article.createdAt.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %></small></p>
                        <div class="row">
                            <div class="d-flex ">
                                <form action="/articles/<%= article._id %>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger m-2 ">Delete</button>

                                </form>
                                <a href="/articles/edit/<%= article._id %>">
                                    <button type="button" class="btn btn-outline-primary m-2">Edit</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } %>
    </div>
    
    
    <%- include('../partials/footer') %>
    
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
